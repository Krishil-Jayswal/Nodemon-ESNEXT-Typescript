{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
  }
}
